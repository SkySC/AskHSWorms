<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/titel_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="10dp"
                android:paddingStart="20dp"
                android:text="Vorlesung SQ"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/datum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/titel_note"
                android:layout_marginEnd="10dp"
                android:text="11:15 am" />

            <TextView
                android:id="@+id/contenu_notizen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/datum_text"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:padding="20dp"
                android:text="@string/random_string" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/contenu_notizen"
        android:src="@drawable/watchicon" />
    <ImageView
        android:layout_width="30dp"
        android:id="@+id/btnUpdate"
        android:layout_height="30dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/contenu_notizen"
        android:src="@drawable/updateicon" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/contenu_notizen"
        android:src="@drawable/deleticon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/khat"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:background="@color/rotbar"/>
</RelativeLayout>